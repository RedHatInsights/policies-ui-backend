{
    "extends": [
        "github>konflux-ci/mintmaker//config/renovate/renovate.json"
    ],
    "tekton": {
        "includePaths": [".tekton/**"],
        "schedule": ["at any time"]
    },
    "schedule": [
        "* 3-10 * * 1"
    ],
    "baseBranches": ["master"],
    "ignorePaths": [
      ".pre-commit-config.yaml"
    ],
    "packageRules": [
      {
        "matchPackageNames": ["/com.redhat.quarkus.platform/"],
        "allowedVersions": "!/^3\\.20\\.2\\.redhat-00002$/"
      }
    ]
}
